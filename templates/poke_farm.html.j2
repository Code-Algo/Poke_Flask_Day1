{% extends 'base.html.j2' %}

{% block title %}
    
{% endblock %}

{% block content %}

<h1></h1>
<form action="/poke_farm" method="POST">
  <div class="mb-3">
    <label for="name" class="form-label">Enter Pokemon Name</label>
    <input type="text" name = "name" class="form-control" id="name">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
{% if poke_data %}
<img src = {{poke_data.sprite}}>
<h1>{{poke_data.name}}</h1>
<p>Ability: {{poke_data.ability}}</p>
<p>Defence: {{poke_data.defence}}</p>
<p>Attack: {{poke_data.attack}}</p>
<p>HP: {{poke_data.HP}}</p>
{% endif %}

{% endblock %}